@model TheBook.ViewModels.TeamMember

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thông tin thành viên</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
                <label asp-for="IdentityCardNumber">Mã nhân viên</label>
                <input asp-for="IdentityCardNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="IdentityCardNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Tên nhân viên</label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>           
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
                <label asp-for="MobileNumber">Số điện thoại</label>
                <input asp-for="MobileNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="MobileNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnotherContact">Số liên lạc khác</label>
                <input asp-for="AnotherContact" class="form-control" />
                <span class="text-danger" asp-validation-for="AnotherContact"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note">Ghi chú</label>
                <input asp-for="Note" class="form-control" />
                <span class="text-danger" asp-validation-for="Note"></span>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Thêm mới" />
            </div>
        </div>
    </div>
</form>