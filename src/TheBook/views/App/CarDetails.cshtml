@model TheBook.ViewModels.Car

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thông tin xe</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
                <label asp-for="CarName">Tên xe</label>
                <input asp-for="CarName" class="form-control" />
                <span class="text-danger" asp-validation-for="CarName"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarNumber">Biển số</label>
                <input asp-for="CarNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="CarNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatNumber">Số chỗ</label>
                <input asp-for="SeatNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="SeatNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note">Ghi chú</label>
                <textarea asp-for="Note" cols="40" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Thêm mới" />
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <h2>Danh sách xe</h2>
        </div>
    </div>
</form>